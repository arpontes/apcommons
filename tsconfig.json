{
    "compilerOptions": {
        "target": "es2021",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "incremental": true,
        "outDir": "./dist",
        "declaration": true,
        "declarationMap": true
    },
    "include": ["src/**.ts"],
    "exclude": ["**/*.test.ts"]
}
